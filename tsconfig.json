{
  "compilerOptions": {
    "rootDir": ".",
    "target": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "example"
  ]
}